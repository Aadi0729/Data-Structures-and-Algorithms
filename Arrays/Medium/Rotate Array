class Solution {
public:
    void reverseArray(vector<int>& nums, int s, int e) {
        int start = s;
        int end = e;

        while(start <= end) {
            swap(nums[start], nums[end]);
            start++;
            end--;
        }
    }

    void rotate(vector<int>& nums, int k) {
        int n = nums.size();

        reverseArray(nums, 0, n-k-1);
        reverseArray(nums, n-k, n-1);

        reverseArray(nums, 0, n-1);
    }
};
