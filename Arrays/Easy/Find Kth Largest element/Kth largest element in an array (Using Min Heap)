#include <iostream>
#include <vector>
#include <queue>
using namespace std;

int findKthLargest(vector<int>& nums, int k) {
    int n = nums.size();
    priority_queue<int, vector<int>, greater<int>> minHeap;
    
    for(int i=0; i<n; i++) {
        minHeap.push(nums[i]);
        if(minHeap.size() > k)
            minHeap.pop();
    }
    
    return minHeap.top();
}

int main() {
    int n;
    cout << "Enter the size ";
    cin >> n;
    
    if(n<=0) {
        cout << "Invalid size!";
        return 0;
    }
    
    vector<int> nums(n);
    cout << "Enter the values in nums: " << endl;
    
    for(int i=0; i<n; i++) {
        cin >> nums[i];
    }
    int k;
    cout << "Enter the k: ";
    cin >> k;
    
    int kthLargest = findKthLargest(nums, k);
    
    cout << "The " << k << "th largest element is " << kthLargest;
    
    return 0;
}
