#include <iostream>
#include <vector>
using namespace std;

bool isSorted(vector<int>& nums) {
    int n = nums.size();
    
    if(n == 1) {
        return true;
    }
    
    for(int i=0; i<n-1; i++) {
        if(nums[i] > nums[i+1])
            return false;
    }
    
    return true;
}

int main() {
    int n;
    cout << "Enter size: ";
    cin >> n;
    
    if(n<=0) {
        cout << "Invalid size!";
        return 0;
    }
    
    vector<int> nums(n);
    cout << "Enter the elements: ";
    for(int i=0; i<n; i++) {
        cin >> nums[i];
    }
    
    bool res = isSorted(nums);
    
    if(res)
        cout << "The array is sorted.";
    else
        cout << "The array is not sorted.";
    
    return 0;
}
