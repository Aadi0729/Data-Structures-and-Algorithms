Time complexity: O(n)
Space complexity: O(1)

class Solution {
public:
    bool check(vector<int>& nums) {
        int n = nums.size();
        int dropCnt = 0;
        for(int i=0; i<n-1; i++) {
            if(nums[i] > nums[i+1])
                dropCnt++;
        }
        if(nums[n-1] > nums[0])
            dropCnt++;
        
        return dropCnt <= 1;
    }
};
